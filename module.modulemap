module SDL [system] {
    umbrella header "SDL2/include/SDL.h"
    link "SDL2"
    export *

    module gpu {
        header "sdl-gpu/include/SDL_gpu.h"
        link "SDL2_gpu"
        export *
    }

    module ttf {
        header "SDL_ttf/SDL_ttf.h"
        link "z"
        link "harfbuzz"
        link "freetype"
        link "SDL2_ttf"
        export *
    }
}
